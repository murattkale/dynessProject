@using WebUI.Models;
@using WebUI.Helpers;

@model EskiKayitDuzenleViewModel

@{
    var title = Model.Model.EskiKayitId == 0
        ? Resources.LangResources.EskiKayitEkle
        : $"{Resources.LangResources.EskiKayitGuncelle} ({Model.Model.Ogrenci})";

    ViewBag.Title = title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(true);

    var menu = Resources.LangResources.Ogrenciler;
}

@section Menu{ @menu}

@section Page{@title}

