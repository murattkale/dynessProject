@using Core.CrossCuttingConcerns.Security

<!DOCTYPE html>
<html>
<head>
    @*<title>@Page.Title</title>*@
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dyness.com.tr</title>
    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/assets/global/css/icons/icomoon/styles.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/bootstrap_limitless.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/layout.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/components.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/colors.css" rel="stylesheet" type="text/css">
    <link href="~/assets/global/js/plugins/pickers/bootstrap-datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" type="text/css">
    <link href="~/assets/global/js/plugins/pickers/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" type="text/css">
    <link href="~/assets/global/js/plugins/forms/inputs/icheck/skins/square/blue.css" rel="stylesheet" type="text/css" />

    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="~/assets/global/js/main/jquery.min.js"></script>
    <script src="~/assets/global/js/plugins/ui/moment/moment.min.js"></script>
    <script src="~/assets/global/js/plugins/ui/moment/moment_locales.min.js"></script>
    <script src="~/assets/global/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/assets/global/js/plugins/loaders/blockui.min.js"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="~/assets/global/js/plugins/forms/inputs/inputmask.js"></script>
    <script src="~/assets/global/js/plugins/forms/validation/validate.min.js"></script>
    <script src="~/assets/global/js/plugins/forms/validation/localization/messages_tr.js"></script>
    <script src="~/assets/global/js/plugins/forms/validation/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/global/js/plugins/forms/selects/select2.min.js"></script>
    <script src="~/assets/global/js/plugins/forms/selects/bootstrap_multiselect.js"></script>
    <script src="~/assets/global/js/plugins/forms/styling/uniform.min.js"></script>
    <script src="~/assets/global/js/plugins/forms/inputs/maxlength.min.js"></script>
    <script src="~/assets/global/js/plugins/forms/inputs/icheck/icheck.min.js" type="text/javascript"></script>
    <script src="~/assets/global/js/plugins/tables/datatables/datatables.min.js"></script>
    <script src="~/assets/global/js/plugins/tables/datatables/extensions/responsive.min.js"></script>
    <script src="~/assets/global/js/plugins/pickers/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/global/js/plugins/pickers/bootstrap-datepicker/locales/bootstrap-datepicker.tr.js"></script>
    <script src="~/assets/global/js/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/assets/js/dashboard.js"></script>
    <script src="~/assets/js/d3.min.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/js/daterangepicker.js"></script>
    <script src="~/assets/js/switchery.min.js"></script>
    <script src="~/assets/js/d3_tooltip.js"></script>
    <!-- /theme JS files -->

    <script>
        jQuery.extend(jQuery.validator.methods, {
            number: function (value, element) {
                return this.optional(element)
                    || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:[,.]\d+)?$/.test(value);
            }
        });

    </script>

    @RenderSection("head", required: false)
    @{
        var controller = ViewContext.RouteData.Values["controller"].ToString();
    }

</head>
<body>
    <!-- Main navbar -->
    <div id="main_menu" class="navbar navbar-expand-md navbar-dark">
        <div class="navbar-brand">
            <a href="/" class="d-inline-block">
                @if (!string.IsNullOrEmpty(Identity.KurumLogoYol))
                {
                    <img src="@Identity.KurumLogoYol" alt="">
                }
                else
                {
                    <img src="~/assets/images/logo/logo_light.png" alt="">
                }
            </a>
        </div>
        <div class="d-md-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-mobile">
                <i class="icon-tree5"></i>
            </button>
            <button class="navbar-toggler sidebar-mobile-main-toggle" type="button">
                <i class="icon-paragraph-justify3"></i>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbar-mobile">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" class="navbar-nav-link sidebar-control sidebar-main-toggle d-none d-md-block">
                        <i class="icon-paragraph-justify3"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown dropdown-user">
                    <a href="#" class="navbar-nav-link d-flex align-items-center dropdown-toggle" data-toggle="dropdown">
                        <img src="@Identity.GorselYol" class="rounded-circle mr-2" height="34" alt="">
                        <span>@Identity.AdSoyad</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="@Url.Action("SifreDegistir","OgrenciBilgi")" class="dropdown-item"><i class="icon-user"></i>@Resources.LangResources.SifreDegistir</a>
                        <a href="@Url.Action("CikisYap","Kullanici")" class="dropdown-item"><i class="icon-switch2"></i>@Resources.LangResources.CikisYap</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- /main navbar -->
    <!-- Page content -->
    <div class="page-content">

        <!-- Main sidebar -->
        <div class="sidebar sidebar-light sidebar-main sidebar-expand-md">
            <!-- Sidebar mobile toggler -->
            <div class="sidebar-mobile-toggler text-center">
                <a href="#" class="sidebar-mobile-main-toggle">
                    <i class="icon-arrow-left8"></i>
                </a>
                Bidolu Eğitim
                <a href="#" class="sidebar-mobile-expand">
                    <i class="icon-screen-full"></i>
                    <i class="icon-screen-normal"></i>
                </a>
            </div>
            <!-- /sidebar mobile toggler -->
            <!-- Sidebar content -->
            <div class="sidebar-content">
                <!-- User menu -->
                <div class="sidebar-user-material">
                    <div class="sidebar-user-material-body">
                        <div class="card-body text-center">
                            <a href="#">
                                <img src="@Identity.GorselYol" class="img-fluid rounded-circle shadow-1 mb-3" width="80" height="80" alt="">
                            </a>
                            <h6 class="mb-0 text-white text-shadow-dark"><strong>@Identity.AdSoyad</strong></h6>
                            <span class="font-size-sm text-white text-shadow-dark">@Identity.PersonelGrupAd</span><br />
                            <span class="font-size-sm text-white text-shadow-dark">@Identity.UlkeAd</span><br />
                        </div>

                        <div class="sidebar-user-material-footer">
                            <a href="#user-nav" class="d-flex justify-content-between align-items-center text-shadow-dark dropdown-toggle" data-toggle="collapse"><span>@Resources.LangResources.Hesabim</span></a>
                        </div>
                    </div>

                    <div class="collapse" id="user-nav">
                        <ul class="nav nav-sidebar">
                            <li class="nav-item">
                                <a href="/OgrenciBilgi/SifreDegistir" class="nav-link">
                                    <i class="icon-user"></i>
                                    <span>@Resources.LangResources.SifreDegistir</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("CikisYap","OgrenciBilgi")" class="nav-link">
                                    <i class="icon-switch2"></i>
                                    <span>@Resources.LangResources.CikisYap</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /user menu -->
                <!-- Main navigation -->
                <div class="card card-sidebar-mobile">
                    <ul class="nav nav-sidebar" data-nav-type="accordion">
                        <!-- Main -->
                        <li class="nav-item">
                            <a href="@Url.Action("", "OgrenciBilgi")" class="nav-link">
                                <i class="icon-home4"></i>
                                <span>@Resources.LangResources.Anasayfa</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("OgrenciDetay", "OgrenciBilgi")" class="nav-link">
                                <i class="icon-user"></i>
                                <span>@Resources.LangResources.OgrenciBilgi</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("EgitimListele", "OgrenciBilgi")" class="nav-link">
                                <i class="icon-file-video"></i>
                                <span>@Resources.LangResources.EgitimListele</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /main navigation -->
            </div>
            <!-- /sidebar content -->

        </div>
        <!-- /main sidebar -->
        <!-- Main content -->
        <div class="content-wrapper">
            @if (IsSectionDefined("Menu") || IsSectionDefined("Page"))
            {
                var sectionMenu = RenderSection("Menu").ToHtmlString();
                var sectionPage = RenderSection("Page").ToHtmlString();

                <!-- Page header -->
                <div class="page-header page-header-light">
                    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
                        <div class="page-title d-flex">
                            <h4><span class="font-weight-semibold">@Html.Raw(sectionMenu)</span> - @Html.Raw(sectionPage)</h4>
                        </div>
                        <div class="d-flex">
                            <div class="breadcrumb">
                                <a href="@Url.Action("Index", "Home")" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Bilgi Paneli</a>
                                @if (IsSectionDefined("Menu"))
                                {
                                    <a href="form_inputs.html" class="breadcrumb-item">@Html.Raw(sectionMenu)</a>
                                }
                                @if (IsSectionDefined("Page"))
                                {
                                    <span class="breadcrumb-item active">@Html.Raw(sectionPage)</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /page header -->
            }
            <!-- Content area -->
            <div class="content">
                @RenderBody()
            </div>
            <!-- /content area -->
            <!-- Footer -->
            <div class="navbar navbar-expand-lg navbar-light">
                <div class="text-center d-lg-none w-100">
                    <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
                        <i class="icon-unfold mr-2"></i>
                        Bidolu Eğitim
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-footer">
                    <span class="navbar-text">
                        © 2019-2020  <a href="#">dyness.com.tr</a> Tüm hakları saklıdır.
                    </span>

                </div>
            </div>
            <!-- /footer -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
</body>
</html>
